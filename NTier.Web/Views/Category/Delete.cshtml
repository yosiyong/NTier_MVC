@inject IViewLocalizer Localizer
@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Localizer["Delete Category"]</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">@Localizer["Category Name"]</label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">@Localizer["Display Order"]</label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
		</div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">@Localizer["Delete"]</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    @Localizer["Back to List"]
                </a>
            </div>
        </div>
    </div>
</form>